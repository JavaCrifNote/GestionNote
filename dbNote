create database dbNote DEFAULT CHARACTER SET latin1 COLLATE latin1_bin;
USE dbNote;

create table if not exists eleve
(
   id_eleve                    bigint(11)                    not null auto_increment,
   nom                         varchar(100)                  not null,
   prenom                      varchar(1000)                 not null,	
   constraint pk_eleve primary key (id_eleve)
)ENGINE=InnoDB;

create table if not exists matiere
(
   id_matiere                bigint(11)                    not null auto_increment,
   nom                       varchar(100)                  not null,
   constraint pk_matiere primary key (id_matiere)
)ENGINE=InnoDB;

create table if not exists eleve_matiere
(
   id_eleve                	 bigint(11)                    not null,
   id_matiere                bigint(11)                    not null,
   note                      float(4,2)                	not null,	
   constraint pk_eleve_matiere primary key (id_eleve, id_matiere),
   constraint fk_eleve foreign key (id_eleve) references eleve (id_eleve),
   constraint fk_matiere foreign key (id_matiere) references matiere (id_matiere)
)ENGINE=InnoDB;
